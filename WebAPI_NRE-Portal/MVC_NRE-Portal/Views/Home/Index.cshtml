@model MVC_NRE_Portal.Models.ChartViewModel
@using System.Text.Json

@{
    ViewData["Title"] = "NRE - Home Page";
}

<h1 class="mt-3">Portal of the new renewable energy in Valais</h1>
<p class="text-muted">Quick access tiles below, plus charts of aggregated production (kWh per year).</p>

<!-- Tiles omitted here for brevity if you've already added them -->

<vc:bar-chart model="Model"></vc:bar-chart>

<hr class="my-4" />

<h6>Total renewables per year (Line)</h6>
<canvas id="lineChart1" width="800" height="320"></canvas>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        const labels = @Html.Raw(JsonSerializer.Serialize(Model.Labels));
        const values = @Html.Raw(JsonSerializer.Serialize(Model.Data));

        new Chart(document.getElementById('lineChart1').getContext('2d'), {
            type: 'line',
            data: {
                labels: labels,
                datasets:[{
                    label: 'kWh',
                    data: values,
                    backgroundColor: 'rgba(54, 162, 235, 0.25)',
                    borderColor: 'rgba(54, 162, 235, 1)',
                    borderWidth: 2,
                    tension: 0.25,
                    pointRadius: 3,
                    fill: true
                }]
            },
            options: {
                responsive: true,
                scales: {
                    y: { title: { display: true, text: 'kWh' } },
                    x: { title: { display: true, text: 'Year' } }
                }
            }
        });
    </script>
}
