<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MVC_NRE_Portal</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MVC_NRE_Portal.styles.css" asp-append-version="true" />
</head>
<body class="app-body">
    <header class="app-header">
        <div class="container app-bar">
            <a class="brand" asp-area="" asp-controller="Home" asp-action="Index">
                <span class="brand-name">New Renewable Energy Portal</span>
            </a>

            <nav class="nav-main">
                <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>

                <div class="dropdown">
                    <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-expanded="false">
                        Production
                    </a>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" asp-controller="Production" asp-action="Dashboard">Dashboard</a></li>
                        <li><hr class="dropdown-divider" /></li>
                        <li><a class="dropdown-item" asp-controller="Production" asp-action="PV">PV</a></li>
                        <li><a class="dropdown-item" asp-controller="Production" asp-action="MiniHydro">Mini-Hydraulic</a></li>
                        <li><a class="dropdown-item" asp-controller="Production" asp-action="Wind">Windturbine</a></li>
                        <li><a class="dropdown-item" asp-controller="Production" asp-action="Biogas">Biogas</a></li>
                    </ul>
                </div>

                <a class="nav-link" asp-controller="PrivateInstallation" asp-action="Index" asp-route-step="1">
                    Private installation
                </a>

                <a class="nav-link" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </nav>
        </div>
    </header>

    <main class="container app-content">
        @RenderBody()
    </main>

    <footer class="app-footer">
        <div class="container small text-muted">
            © @DateTime.UtcNow.Year — MVC_NRE_Portal
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
