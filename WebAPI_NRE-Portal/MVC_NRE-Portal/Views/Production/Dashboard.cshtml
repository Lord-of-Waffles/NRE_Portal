@* Views/Production/Dashboard.cshtml *@
@model MVC_NRE_Portal.Models.ChartViewModel

@{
    ViewData["Title"] = "Production Dashboard";
}
<!-- webpage, also contains the barchart component - ben -->
<div class="container mt-4">
    <h1 class="mb-4">Energy Production Dashboard</h1>
    
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3>@Model.ChartTitle</h3>
                </div>
                <div class="card-body">
                    @await Component.InvokeAsync("BarChart", new { model = Model })
                </div>
            </div>
        </div>
    </div>
</div>