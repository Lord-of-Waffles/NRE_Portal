@model MVC_NRE_Portal.Models.PrivateInstallationViewModel

@{
    ViewData["Title"] = "Entering my private installation";
}

<h1>Entering my private installation</h1>
<p class="text-muted">Home > Private installation</p>

@await Html.PartialAsync("_PrivateInstallationTabs", Model)

<div class="card">
    <div class="card-body">
        @if (Model.CurrentStep == 1)
        {
            <h5>Location</h5>
            
            <p class="text-muted small">Later: geolocation, canton, municipality...</p>
        }
        else if (Model.CurrentStep == 2)
        {
            <h5>Type of installation</h5>
           

        }
        else if (Model.CurrentStep == 3)
        {
            <h5>Orientation</h5>
            
        }
        else if (Model.CurrentStep == 4)
        {
            <h5>Area</h5>
            
        }
    </div>
</div>

<form asp-action="Navigate" method="post" class="mt-3 d-flex gap-2">
    <input type="hidden" asp-for="CurrentStep" />
    <button type="submit" name="direction" value="prev" class="btn btn-outline-secondary" @(Model.CurrentStep == 1 ? "disabled" : "")>
        <- Previous
    </button>
    <button type="submit" name="direction" value="next" class="btn btn-primary ms-auto" @(Model.CurrentStep == 4 ? "disabled" : "")>
        Next ->
    </button>
</form>
