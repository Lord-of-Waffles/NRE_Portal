@model MVC_NRE_Portal.Models.PrivateInstallationViewModel
@{
    var step = Model.CurrentStep;
    string StepClass(int s) =>
        s < step ? "wiz-step done"
      : s == step ? "wiz-step active"
      : "wiz-step";
}
<!-- Single navigator: the stepper -->
<div class="mb-3">
    <ol class="wizard align-items-center">
        <li class="@StepClass(1)">
            <span class="wiz-index">1</span>
            <a class="wiz-label"
               asp-controller="PrivateInstallation" asp-action="Go" asp-route-step="1">Location</a>
        </li>
        <div class="wiz-rail"></div>
        <li class="@StepClass(2)">
            <span class="wiz-index">2</span>
            <a class="wiz-label"
               asp-controller="PrivateInstallation" asp-action="Go" asp-route-step="2">Type</a>
        </li>
        <div class="wiz-rail"></div>
        <li class="@StepClass(3)">
            <span class="wiz-index">3</span>
            <a class="wiz-label"
               asp-controller="PrivateInstallation" asp-action="Go" asp-route-step="3">Orientation</a>
        </li>
        <div class="wiz-rail"></div>
        <li class="@StepClass(4)">
            <span class="wiz-index">4</span>
            <a class="wiz-label"
               asp-controller="PrivateInstallation" asp-action="Go" asp-route-step="4">Area</a>
        </li>
    </ol>
    <div class="text-muted small">Guide your setup in four quick steps. Data stays as you navigate.</div>
</div>
